{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@test/*": ["../test/*"],
      "~/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
